<Window x:Class="XMusCringleW.Views.People"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMusCringleW.Views"
        mc:Ignorable="d"
        Title="People" Height="300" Width="300">
    <Window.DataContext>
        <Binding Path="Main.People" Source="{StaticResource Locator}"/>
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding PeopleList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding OName}" />
                        <TextBlock Text="Partner: " />
                        <TextBox Text="{Binding Partner.OName }" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
